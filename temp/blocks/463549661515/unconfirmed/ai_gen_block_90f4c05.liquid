{% doc %}
  @prompt
    The section where on the left is Rich Text for the store's opening hours, and on the left is the newsletter subscription form
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hours-newsletter-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    padding: 60px 40px;
    background-color: {{ block.settings.background_color }};
    max-width: 100%;
  }

  .ai-hours-newsletter__hours-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-hours-newsletter__hours-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 8px 0;
  }

  .ai-hours-newsletter__hours-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-hours-newsletter__newsletter-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-hours-newsletter__newsletter-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 8px 0;
  }

  .ai-hours-newsletter__newsletter-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin-bottom: 8px;
  }

  .ai-hours-newsletter__form-wrapper-{{ ai_gen_id }} {
    width: 100%;
  }

  .ai-hours-newsletter__form-field-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-bottom: 8px;
  }

  .ai-hours-newsletter__input-{{ ai_gen_id }} {
    flex-grow: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: {{ block.settings.text_size }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.text_color }};
  }

  .ai-hours-newsletter__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.text_color | color_modify: 'alpha', 0.6 }};
  }

  .ai-hours-newsletter__button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: {{ block.settings.text_size }}px;
    white-space: nowrap;
    transition: background-color 0.3s ease;
  }

  .ai-hours-newsletter__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-hours-newsletter__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 14px;
  }

  .ai-hours-newsletter__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-hours-newsletter-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
      padding: 40px 20px;
    }
  }
{% endstyle %}

<div class="ai-hours-newsletter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hours-newsletter__hours-{{ ai_gen_id }}">
    {% if block.settings.hours_heading != blank %}
      <h2 class="ai-hours-newsletter__hours-title-{{ ai_gen_id }}">
        {{ block.settings.hours_heading }}
      </h2>
    {% endif %}
    {% if block.settings.hours_content != blank %}
      <div class="ai-hours-newsletter__hours-content-{{ ai_gen_id }}">
        {{ block.settings.hours_content }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hours-newsletter__newsletter-{{ ai_gen_id }}">
    {% if block.settings.newsletter_heading != blank %}
      <h2 class="ai-hours-newsletter__newsletter-title-{{ ai_gen_id }}">
        {{ block.settings.newsletter_heading }}
      </h2>
    {% endif %}
    {% if block.settings.newsletter_description != blank %}
      <div class="ai-hours-newsletter__newsletter-description-{{ ai_gen_id }}">
        {{ block.settings.newsletter_description }}
      </div>
    {% endif %}

    {%- form 'customer', class: 'ai-hours-newsletter__form-wrapper-' | append: ai_gen_id -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="ai-hours-newsletter__form-field-{{ ai_gen_id }}">
        <input
          type="email"
          name="contact[email]"
          class="ai-hours-newsletter__input-{{ ai_gen_id }}"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="ai-hours-newsletter-error-{{ ai_gen_id }}"
          {% endif %}
          {% if form.posted_successfully? %}
            aria-describedby="ai-hours-newsletter-success-{{ ai_gen_id }}"
          {% endif %}
          placeholder="{{ block.settings.email_placeholder }}"
          required
        >
        <button
          type="submit"
          class="ai-hours-newsletter__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_label }}
        </button>
      </div>
      {%- if form.errors -%}
        <div
          id="ai-hours-newsletter-error-{{ ai_gen_id }}"
          class="ai-hours-newsletter__error-{{ ai_gen_id }}"
        >
          <span>{{ form.errors.messages.email }}</span>
        </div>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <div
          id="ai-hours-newsletter-success-{{ ai_gen_id }}"
          class="ai-hours-newsletter__success-{{ ai_gen_id }}"
        >
          <span>{{ block.settings.success_message }}</span>
        </div>
      {%- endif -%}
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "Hours and newsletter",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Opening hours"
    },
    {
      "type": "richtext",
      "id": "hours_heading",
      "label": "Heading",
      "default": "<p>Opening hours</p>"
    },
    {
      "type": "richtext",
      "id": "hours_content",
      "label": "Hours content",
      "default": "<p>Monday - Friday: 9:00 AM - 6:00 PM<br>Saturday: 10:00 AM - 4:00 PM<br>Sunday: Closed</p>"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
